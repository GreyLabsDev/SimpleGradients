<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="gradientOrientation" format="enum">
        <enum name="horizontal" value="0"/>
        <enum name="vertical" value="1"/>
    </attr>
    <attr name="baseColors" format="string"/>

    <declare-styleable name="GradientTextView">
        <attr name="gradientOrientation"/>
        <attr name="baseColors"/>
    </declare-styleable>

    <declare-styleable name="GradientView">
        <attr name="gradientOrientation"/>
        <attr name="baseColors"/>
        <attr name="startColorsPositions" format="string"/>
        <attr name="endColorsPositions" format="string"/>
        <attr name="animationOnStart" format="boolean"/>
        <attr name="animationStepDuration" format="integer"/>
        <attr name="animationLoop" format="boolean"/>
    </declare-styleable>
</resources>

